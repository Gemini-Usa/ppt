% table of contents (overview)
\setbeamertemplate{section in toc}{%
  \leavevmode\leftskip=1.75ex%z
  \llap{%
    \usebeamerfont*{section number projected}%
    \usebeamercolor[bg]{section number projected}%
    \raise.4ex\hbox{\vrule width2.25ex height1.85ex depth.4ex%
    \hskip-2.25ex%
    \hbox to2.25ex{\hfil\color{fg}\inserttocsectionnumber\hfil}}}%
  \kern1.25ex\inserttocsection\par%
}
\setbeamertemplate{subsection in toc}{%
  \leavevmode\leftskip=2em$\bullet$\hskip.5em\inserttocsubsection\par%
}
